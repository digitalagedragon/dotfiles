{
    "workbench.colorTheme": "Solarized Dark",
    "editor.tokenColorCustomizations": {
        "comments": {
            // "foreground": "#dc322f",
            "fontStyle": ""
        },
        "functions": {
            "foreground": "#6c71c4",
            "fontStyle": "bold",
        },
        "variables": {
            "foreground": "#b58900",
            // "fontStyle": "italic",
        },
        "keywords": {
            "foreground": "#2aa198",
            "fontStyle": "bold",
        },
        "strings": {
            "foreground": "#cb4b16"
        },
        // because apparently perl variables aren't "variables"
        "textMateRules": [
            {
                "scope": "variable.other",
                "settings": {
                    "foreground": "#b58900",
                    // "fontStyle": "italic"
                }
            }
        ]
    },
    "editor.fontFamily": "'Fixedsys Excelsior'",
    "editor.minimap.enabled": false,
    "editor.fontSize": 16,
    "window.zoomLevel": 0,
    "editor.lineHeight": 16,
    "editor.cursorStyle": "underline",
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#839496"
    },
    "editor.detectIndentation": false,
    "git.autofetch": true,
    "editor.fontLigatures": true,
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "none"
}